<div class="container mx-auto my-10">
  <h1 class="text-2xl font-bold mb-5">Lista de usuarios</h1>
  
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-2">
      <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          
          <table class="min-w-full text-left text-sm font-light">
            <thead class="border-b text-white text-center bg-blue-900 font-medium dark:border-neutral-500 dark:bg-neutral-600">
              <tr>
                <th scope="col" class="px-6 py-4">Rut</th>
                <th scope="col" class="px-6 py-4">Nombre de usuario</th>
                <th scope="col" class="px-6 py-4">Correo electr√≥nico</th>
                <th scope="col" class="px-6 py-4">Rol</th>
                <th scope="col" class="px-6 py-4">Acciones</th>
              </tr>
            </thead>

            <tbody>
              {{#each usuarios}}
              <tr class="border-b text-center transition duration-300 ease-in-out hover:bg-gray-300 dark:border-neutral-500 dark:hover:bg-neutral-600">
                <td class="whitespace-nowrap px-6 py-4">{{this.Rut}}</td>
                <td class="whitespace-nowrap px-6 py-4">{{this.Nombre}}</td>
                <td class="whitespace-nowrap px-6 py-4">{{this.Correo}}</td>
                <td class="whitespace-nowrap px-6 py-4">{{this.Rol}}</td>
                <td class="whitespace-nowrap px-6 py-4">
                  <a href="/EditarUsuario/{{this.ID}}" class="px-2 py-1 bg-green-500 text-white rounded-md hover:bg-green-600">Editar</a>
                  <a href="/EliminarUsuario/{{this.ID}}" class="px-2 py-1 bg-red-500 text-white rounded-md hover:bg-red-600">Eliminar </a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>