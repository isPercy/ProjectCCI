<div class="py-10 flex items-center justify-center">
    <div class="max-w-md w-full space-y-8">
        
        <div>
            <h2 class="text-center text-3xl font-extrabold text-gray-900">Registro de usuario</h4>
        </div>

        <form class="mt-8 space-y-6" action="/signup" method="POST">
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="Nombre Apellido" class="sr-only"></label>
                    <input type="text" name="Nombre Apellido" placeholder="Nombre y Apellido" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" autofocus>
                </div>
                <div>
                    <label for="Run" class="sr-only"></label>
                    <input type="text" name="Run" placeholder="RUN" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" autofocus>
                </div>
                <div>
                    <label for="CorreoElectronico" class="sr-only"></label>
                    <input type="text" name="CorreoElectronico" placeholder="Correo Electrónico" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                </div>
                <div>
                    <label for="Contrasenia" class="sr-only"></label>
                    <input type="password" name="Contrasenia" placeholder="Contraseña" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                </div>
                <div>
                    <button class="mt-4 group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Regístrate</button>
                </div>
            </div>
        </form>
       
    </div>
</div>