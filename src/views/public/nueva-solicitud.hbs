<div class="container p-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="col-span-1">
            <div class="bg-white shadow-md p-4">
                <form action="/AddSolicitud" method="post">
                    <div class="mb-4">
                        <input type="text" class="bg-gray-200 border border-gray-300 px-4 py-2 w-full" name="nombre" placeholder="{{usuario.Nombre}}" readonly>
                    </div>
                    <div class="mb-4">
                        <input type="text" name="RUN" class="bg-gray-200 border border-gray-300 px-4 py-2 w-full" name="nombre" placeholder="{{usuario.Rut}}" readonly>
                    </div>
                    <div class="mb-4">
                        <input type="text" id="organizacion" name="organizacion" class="border border-gray-300 px-4 py-2 w-full" placeholder="Organización">
                    </div>
                    <div class="mb-4">
                        <input type="text" id="representante" name="representante" class="border border-gray-300 px-4 py-2 w-full" placeholder="Nombre de Representante">
                    </div>
                    <div class="mb-4">
                        <input type="text" id="CorreoCliente" name="CorreoCliente" class="border border-gray-300 px-4 py-2 w-full" placeholder="Correo Cliente">
                    </div>
                    <div class="mb-4">
                        <textarea id="descripcion" name="descripcion" rows="2" class="border border-gray-300 px-4 py-2 w-full" placeholder="Descripcion de su Proyecto"></textarea>
                    </div>
                    <div class="mb-4">
                        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Guardar Solicitud
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="col-span-1">
            <div class="shadow-md p-4">
                <table class="min-w-full text-left text-sm font-light">
                    <thead class="border-b text-white text-center bg-blue-900 font-medium dark:border-neutral-500 dark:bg-neutral-600">
                    <tr>
                        <th scope="col" class="px-6 py-4">Descripcion</th>
                        <th scope="col" class="px-6 py-4">Organización</th>
                        <th scope="col" class="px-6 py-4">Nombre del cliente</th>
                        <th scope="col" class="px-6 py-4">Estado</th>
                    </tr>
                    </thead>

                    <tbody>
                    {{#each SolicitudList}}
                    <tr class="border-b text-center transition duration-300 ease-in-out hover:bg-gray-300 dark:border-neutral-500 dark:hover:bg-neutral-600">
                        <td class="whitespace-nowrap px-6 py-4">{{this.Descripcion}}</td>
                        <td class="whitespace-nowrap px-6 py-4">{{this.Nombre_Organizacion}}</td>
                        <td class="whitespace-nowrap px-6 py-4">{{this.Nombre_Representante}}</td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
