<div class="p-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="col-span-1">
            <div class="bg-white shadow-md p-4">
                <form action="/AddSolicitud" method="post">
                    {{!-- DATOS DE USUARIO LOGUEADO --}}
                    <div class="mb-4">
                        <p>Datos de practicante</p>
                        <input type="text" class="bg-gray-200 border border-gray-300 px-4 py-2 w-full" name="nombre" placeholder="{{usuario.Nombre}}" readonly>
                    </div>
                    <div class="mb-4">
                        <input type="text" name="RUN" class="bg-gray-200 border border-gray-300 px-4 py-2 w-full" name="nombre" placeholder="{{usuario.Rut}}" readonly>
                    </div>

                    {{!-- IMPUTS PARA GUARDAR DATOS DE ORGANIZACION Y PROPUESTA --}}
                    <div class="mb-4">
                        <p>Datos de cliente</p>
                        <input required type="text" id="Organizacion" name="Organizacion" class="border border-gray-300 px-4 py-2 w-full" autocomplete="off" placeholder="Organización">
                    </div>
                    <div class="mb-4">
                        <input required type="text" id="RutCliente" name="RutCliente" class="border border-gray-300 px-4 py-2 w-full" autocomplete="off" placeholder="RUT de Representante">
                    </div>
                    <div class="mb-4">
                        <input required type="text" id="Representante" name="Representante" class="border border-gray-300 px-4 py-2 w-full" autocomplete="off" placeholder="Nombre de Representante">
                    </div>
                    <div class="mb-4">
                        <input required type="email" id="CorreoCliente" name="CorreoCliente" class="border border-gray-300 px-4 py-2 w-full" autocomplete="off" placeholder="Correo Cliente">
                    </div>
                    <div class="mb-4">
                        <p>Propuesta (1000 caracteres max.)</p>
                        <textarea id="Descripcion" name="Descripcion" rows="2" class="border border-gray-300 px-4 py-2 w-full" autocomplete="off" placeholder="Descripcion de su Proyecto"></textarea>
                    </div>
                    <div class="mb-4">
                        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Guardar Solicitud
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="flex flex-col px-4">
            <div class="overflow-x-auto sm:-mx-6 lg:-mx-2">
                <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
                    <div class="overflow-hidden">
                        <table class="min-w-full text-left text-sm font-light">
                            <thead class="border-b text-white text-center bg-blue-900 font-medium dark:border-neutral-500 dark:bg-neutral-600">
                                <tr>
                                    <th scope="col" class="px-6 py-4">Descripcion</th>
                                    <th scope="col" class="px-6 py-4">Organización</th>
                                    <th scope="col" class="px-6 py-4">Nombre del cliente</th>
                                    <th scope="col" class="px-6 py-4">Estado</th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#each SolicitudList}}
                                <tr class="border-b text-center transition duration-300 ease-in-out hover:bg-gray-300 dark:border-neutral-500 dark:hover:bg-neutral-600">
                                    <td class="whitespace-nowrap px-6 py-4">{{this.Descripcion}}</td>
                                    <td class="whitespace-nowrap px-6 py-4">{{this.Nombre_Organizacion}}</td>
                                    <td class="whitespace-nowrap px-6 py-4">{{this.Nombre_Representante}}</td>
                                    <td class="whitespace-nowrap px-6 py-4">{{this.Nombre_Estado}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
